{
    "id":"article",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "node_idref":{
            "title":"Navigationsknoten",
            "type":"string",
            "ui_class":"reference",
            "ui_callout":"/callouts/internal/node_reference",
            "ui_update":["node_idref", "node_title"],
            "ui_width":"xlarge"
        },
        "node_title":{
            "title":"Navigationsknoten",
            "type":"string",
            "ui_width":"xxlarge"
        },
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "catchline":{
            "title":"Spitzmarke",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "teaser_title":{
            "title":"Teaser Titel",
            "type":"string",
            "ui_width":"xxlarge"
        },
        "teaser_text":{
            "title":"Teaser Text",
            "type":"string",
            "ui_class":"richtextarea",
            "ui_width":"xxlarge"
        },
        "teaser_idref":{
            "title":"Teaser Image",
            "type":"string",
            "ui_class":"reference",
            "ui_callout":"/callouts/internal/image_reference",
            "ui_width":"xlarge"
        },
        "body":{
            "title":"Body Text",
            "type":"string",
            "ui_class":"richtextarea",
            "ui_width":"xxlarge"
        },
        "related_articles":{
            "title":"Weiterführende Artikel",
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "article_idref":{
                        "title":"Artikel",
                        "type":"string",
                        "description":"References an internal URL to a selected article.",
                        "ui_callout":"/callouts/internal/test_reference",
                        "ui_class":"reference",
                        "ui_width":"xlarge",
                        "ui_update":["article_idref", "headline", "teaser"]
                    },
                    "headline":{
                        "title":"Headline",
                        "type":"string",
                        "ui_width":"xxlarge"
                    },
                    "teaser":{
                        "title":"Text",
                        "type":"string",
                        "ui_width":"xxlarge",
                        "ui_class":"richtextarea"
                    },
                    "image_idref":{
                        "title":"Image (intern)",
                        "type":"string",
                        "ui_width":"xlarge",
                        "ui_callout":"/callouts/internal/image_reference",
                        "ui_update":["image_idref", "image_title"],
                        "description":"References an internal URL to a selected image."
                    }
                }
            }
        },
        "dates":{
            "title":"Datumseinträge",
            "type":"object",
            "properties":{
                "embargo_date":{
                    "title":"Embargo Date",
                    "description":"Specify the embargo date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui_width":"small"
                },
                "expire_date":{
                    "title":"Expire Date",
                    "description":"Specify the expire date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui_width":"small"
                },
                "sort_date":{
                    "title":"Sort Date",
                    "description":"Specify the sort date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui_width":"small"
                }
            }
        },
        "tags":{
            "title":"Tags",
            "type":"array",
            "ui_width":"large",
            "items":{
                "type":"string",
                "ui_query_type":"tags"
            }
        },
        "author":{
            "title":"Autor",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "copyright":{
            "title":"Copyright",
            "type":"string",
            "ui_width":"xxlarge"
        },
        "source":{
            "title":"Source",
            "type":"string",
            "ui_width":"large"
        },
        "sidebar_idref":{
            "title":"Sidebar",
            "type":"string",
            "ui_class":"reference",
            "ui_callout":"/callouts/internal/sidebar_reference",
            "ui_width":"xlarge"
        },
        "adzone":{
            "title":"Belegungseinheit",
            "type":"string",
            "ui_width":"large"
        },
        "settings":{
            "title":"Settings",
            "type":"object",
            "properties":{
                "comments":{
                    "title":"Kommentare zulassen",
                    "type":"boolean",
                    "default":true
                },
                "print":{
                    "title":"Druckansicht",
                    "type":"boolean",
                    "default":true
                },
                "rating":{
                    "title":"Bewertung zulassen",
                    "type":"boolean",
                    "default":true
                },
                "socialbookmarks":{
                    "title":"Social Bookmarks",
                    "type":"boolean",
                    "default":true
                },
                "recommend":{
                    "title":"Weiterempfehlen",
                    "type":"boolean",
                    "selected":true
                }
            }
        },
        "issue":{
            "title":"Heft",
            "type":"object",
            "properties":{
                "magazine":{
                    "title":"Heft",
                    "type":"string",
                    "enum":["NG", "NG World", "NG Kids"]
                },
                "year":{
                    "title":"Heft Jahr",
                    "type":"integer"
                },
                "number":{
                    "title":"Heftnummer",
                    "type":"integer"
                },
                "pages":{
                    "title":"Seiten",
                    "type":"integer"
                }
            }
        }
    }
}
