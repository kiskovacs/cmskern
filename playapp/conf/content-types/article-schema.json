{
    "id":"cmskern.article",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "online_date":{
            "title":"Online Date",
            "description":"Specify the publication date of this article (format: YYYY-MM-DD, example: 2012-03-19).",
            "type":"string",
            "format":"date",
            "ui_width":"small"
        },
        "paras":{
            "type":"array",
            "title":"Paragraph",
            "items":[
                {
                    "type":"object",
                    "title":"Text",
                    "additionalProperties":false,
                    "properties":{
                        "headline":{
                            "title":"Headline",
                            "type":"string",
                            "ui_width":"xxlarge"
                        },
                        "text":{
                            "title":"Text",
                            "type":"string",
                            "ui_textclass":"textarea",
                            "ui_width":"xxlarge"
                        },
                        "childparas":{
                            "type":"object",
                            "title":"Child Paragraph",
                            "additionalProperties":false,
                            "properties":{
                                "subHeader":{
                                    "title":"Sub-Headline",
                                    "type":"string"
                                },
                                "subText":{
                                    "title":"Sub-Text",
                                    "type":"string",
                                    "ui_textclass":"textarea"
                                }
                            }
                        }
                    }
                },
                {
                    "type":"object",
                    "title":"Internal Image",
                    "additionalProperties":false,
                    "properties":{
                        "image_idref":{
                            "title":"Image (intern)",
                            "description":"References an internal URL to a selected image.",
                            "type":"string",
                            "format":"uri",
                            "ui_width":"xlarge",
                            "ui_callout":"/callouts/internal/image_reference",
                            "ui_update_also":"image_title"
                        },
                        "image_title":{
                            "title":"Title",
                            "type":"string",
                            "ui_width":"xlarge"
                        }
                    }
                },
                {
                    "type":"object",
                    "title":"Flickr Image",
                    "additionalProperties":false,
                    "properties":{
                        "flickr_url":{
                            "title":"Image (flickr)",
                            "description":"References URL from a selected photo (hosted on flickr.com).",
                            "type":"string",
                            "format":"uri",
                            "ui_width":"xlarge",
                            "ui_callout":"/callouts/external/flickr_photo_reference"
                        }
                    }
                }
            ]
        },
        "source":{
            "title":"News Source",
            "type":"string",
            "enum":["unspecified", "by Mail", "by Phone"],
            "default":"unspecified"
        },
        "tags":{
            "title":"Tags",
            "type":"array",
            "items":{
                "type":"string",
                "query_type":"tags"
            }
        }
    }
}
