{
    "id":"articleCollection",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "slug":{
            "title":"Slug",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "legacy_id":{
            "title":"ID (Legacy System)",
            "type":"string",
            "ui":{
                "class":"hidden"
            }
        },
        "legacy_title":{
            "title":"Title (Legacy System)",
            "type":"string",
            "ui":{
                "class":"readonly"
            }
        },
        "articles":{
            "title":"Articles",
            "type":"array",
            "items":{
                "title":"Article",
                "type":"object",
                "properties":{
                    "article_idref":{
                        "title":"Reference",
                        "type":"integer",
                        "ui":{
                            "callout":{
                                "url":"/callouts/internal/article_reference",
                                "src_properties":["id","title", "teaser_text"],
                                "target_properties":["article_idref", "article_title", "article_teaser"]
                            },
                            "width":"xlarge"
                        }
                    },
                    "article_title":{
                        "title":"Title",
                        "type":"string",
                        "ui":{
                            "width":"xlarge"
                        }
                    },
                    "article_teaser":{
                        "title":"Text",
                        "type":"string",
                        "ui":{
                            "width":"xxlarge",
                            "editor":"textarea"
                        }
                    }
                }
            }
        }
    }
}
