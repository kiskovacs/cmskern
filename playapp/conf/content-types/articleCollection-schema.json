{
    "id":"articleCollection",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "slug":{
            "title":"Slug",
            "type":"string",
            "ui_width":"xlarge"
        },
        "articles":{
            "title":"Articles",
            "type":"array",
            "items":{
                "title":"Article",
                "properties":{
                    "article_idref":{
                        "title":"Reference",
                        "type":"string",
                        "ui_class":"reference",
                        "ui_callout":"/callouts/internal/article_reference",
                        "ui_update":["article_idref", "article_title"],
                        "ui_width":"xlarge"
                    },
                    "article_title":{
                        "title":"Title",
                        "type":"string",
                        "ui_width":"xlarge"
                    }
                }
            }
        }
    }
}
