{
    "id":"articleCollection",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "slug":{
            "title":"Slug",
            "type":"string",
            "ui_width":"xlarge"
        },
        "legacy_id":{
            "title":"ID (Legacy System)",
            "type":"string",
            "ui_class":"hidden"
        },
        "legacy_title":{
            "title":"Title (Legacy System)",
            "type":"string",
            "ui_class":"readonly"
        },
        "articles":{
            "title":"Articles",
            "type":"array",
            "items":{
                "title":"Article",
                "type":"object",
                "properties":{
                    "article_idref":{
                        "title":"Reference",
                        "type":"integer",
                        "ui_callout":{
                            "url":"/callouts/internal/article_reference",
                            "src_properties":["id","title", "teaser_text"],
                            "target_properties":["article_idref", "article_title", "article_teaser"]
                        },
                        "ui_width":"xlarge"
                    },
                    "article_title":{
                        "title":"Title",
                        "type":"string",
                        "ui_width":"xlarge"
                    },
                    "article_teaser":{
                        "title":"Text",
                        "type":"string",
                        "ui_width":"xxlarge",
                        "ui_editor":"textarea"
                    }
                }
            }
        }
    }
}
