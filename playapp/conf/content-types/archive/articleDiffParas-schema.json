{
    "id":"articleDiffParas",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "online_date":{
            "title":"Online Date",
            "description":"Specify the publication date of this article (format: YYYY-MM-DD, example: 2012-03-19).",
            "type":"string",
            "format":"date",
            "ui":{
                "width":"small"
            }
        },
        "paras":{
            "title":"Paragraphs",
            "type":"array",
            "items":{
                "type":[
                    {
                        "id":"textpara",
                        "type":"object",
                        "title":"Text Paragraph",
                        "additionalProperties":false,
                        "properties":{
                            "headline":{
                                "title":"Headline",
                                "type":"string",
                                "ui":{
                                    "width":"xxlarge"
                                }
                            },
                            "text":{
                                "title":"Text",
                                "type":"string",
                                "ui":{
                                    "editor":"richtext",
                                    "width":"xxlarge"
                                }
                            },
                            "childparas":{
                                "title":"Child Paragraph",
                                "type":"array",
                                "items":{
                                    "type":[
                                        {
                                            "title":"Child Para",
                                            "type":"object",
                                            "properties":{
                                                "subHeader":{
                                                    "title":"Sub-Headline",
                                                    "type":"string",
                                                    "ui":{
                                                        "width":"xxlarge"
                                                    }
                                                },
                                                "subText":{
                                                    "title":"Sub-Text",
                                                    "type":"string",
                                                    "ui":{
                                                        "editor":"textarea",
                                                        "width":"xxlarge"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    {
                        "id":"internal_image",
                        "type":"object",
                        "title":"Internal Image",
                        "additionalProperties":false,
                        "properties":{
                            "image_idref":{
                                "title":"Image (intern)",
                                "description":"References an internal URL to a selected image.",
                                "type":"integer",
                                "format":"uri",
                                "ui":{
                                    "callout":{
                                        "url":"/callouts/internal/image_reference",
                                        "src_properties":["id", "title"],
                                        "target_properties":["image_idref", "image_title"]
                                    },
                                    "width":"xlarge"
                                }
                            },
                            "image_title":{
                                "title":"Title",
                                "type":"string",
                                "ui":{
                                    "width":"xlarge"
                                }
                            }
                        }
                    },
                    {
                        "id":"flickr_image",
                        "type":"object",
                        "title":"Flickr Image",
                        "additionalProperties":false,
                        "properties":{
                            "flickr_url":{
                                "title":"Image (flickr)",
                                "description":"References URL from a selected photo (hosted on flickr.com).",
                                "type":"string",
                                "format":"uri",
                                "ui":{
                                    "callout":{
                                        "url":"/callouts/external/flickr_photo_reference",
                                        "src_properties":["flickr_url"],
                                        "target_properties":["flickr_url"]
                                    },
                                    "width":"xlarge"
                                }
                            }
                        }
                    }
                ]
            }
        },
        "source":{
            "title":"News Source",
            "type":"string",
            "enum":["unspecified", "by Mail", "by Phone"],
            "default":"unspecified"
        },
        "tags":{
            "title":"Tags",
            "type":"array",
            "ui":{
                "mode":"compact"
            },
            "items":{
                "type":"string",
                "ui":{
                    "query_type":"tags"
                }
            }
        }
    }
}
