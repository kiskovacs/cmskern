{
    "id":"image",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "asset_ref":{
            "title":"Asset",
            "type":"string",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/asset_reference",
                    "src_properties":["id"],
                    "target_properties":["asset_ref"]
                },
                "width":"xlarge",
                "class":"image_thumbnail"
            }
        },
        "keywords":{
            "title":"Keywords",
            "description":"Specify multiple keywords by separating entries with comma.",
            "type":"array",
            "ui":{
                "class":"compact",
                "width":"xlarge"
            },
            "items":{
                "type":"string",
                "ui":{
                    "query_type":"tags"
                }
            }
        },
        "copyright":{
            "title":"Copyright",
            "type":"string",
            "ui":{
                "class":"compact",
                "width":"xlarge"
            }
        },
        "source":{
            "title":"Quelle",
            "type":"string",
            "ui":{
                "class":"compact",
                "width":"xlarge"
            }
        },
        "description":{
            "title":"Bildunterschrift",
            "type":"array",
            "ui":{
                "width":"xxlarge",
                "editor": "textarea"
            }
        },
        "oldid":{
            "title":"oldid",
            "type":"string",
            "ui":{
                "class":"readonly",
                "width":"xlarge"
            }
        },
        "variants":{
            "title":"Varianten",
            "type":"array",
            "items":{
                "title":"Variante",
                "type":"object",
                "properties":{
                    "format":{
                        "title":"Format",
                        "type":"string",
                        "ui":{
                            "width":"xxlarge"
                        }
                    },
                    "asset_ref":{
                        "title":"Asset",
                        "type":"string",
                        "ui":{
                            "callout":{
                                "url":"/callouts/internal/asset_reference",
                                "src_properties":["id"],
                                "target_properties":["asset_ref"]
                            },
                            "width":"xlarge",
                            "class":"image_thumbnail"
                        }
                    }
                }
            }   
        }   
    }
}