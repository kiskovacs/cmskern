{
    "id":"image",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "asset_ref":{
            "title":"Asset",
            "type":"string",
            "ui_callout":{
                "url":"/callouts/internal/asset_reference",
                "src_properties":["id"],
                "target_properties":["asset_ref"]
            },
            "ui_width":"xlarge"
        },
        "keywords":{
            "title":"Keywords",
            "description":"Specify multiple keywords by separating entries with comma.",
            "type":"array",
            "ui_class":"compact",
            "ui_width":"xlarge",
            "items":{
                "type":"string",
                "ui_query_type":"tags"
            }
        },
        "copyright":{
            "title":"Copyright",
            "type":"string",
            "ui_class":"compact",
            "ui_width":"xlarge",
        },        
        "source":{
            "title":"Quelle",
            "type":"string",
            "ui_class":"compact",
            "ui_width":"xlarge",
        },
        "description":{
            "title":"Bildunterschrift",
            "type":"array",
            "ui_width":"xxlarge",
            "ui_editor": "textarea"            
        },
        "oldid":{
            "title":"oldid",
            "type":"string",
            "ui_class":"compact",
            "ui_width":"xlarge",
        },  
        "variants":{
            "title":"Varianten",
            "type":"array",
            "items":{
                "title":"Variante",
                "type":"object",
                "properties":{
                    "format":{
                        "title":"Format",
                        "type":"string",
                        "ui_width":"xxlarge"
                    },
                    "asset_ref":{
                        "title":"Asset",
                        "type":"string",
                        "ui_callout":{
                            "url":"/callouts/internal/asset_reference",
                            "src_properties":["id"],
                            "target_properties":["asset_ref"]
                        },
                        "ui_width":"xlarge"
                    }
                }
            }   
        }   
    }
}