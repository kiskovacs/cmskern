{
    "id":"imageGallery",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "images":{
            "type":"array",
            "title":"Image",
            "items":{
                "title":"Image",
                "properties":{
                    "image_idref":{
                        "title":"Image (intern)",
                        "description":"References an internal URL to a selected image.",
                        "type":"string",
                        "format":"uri",
                        "ui_class":"reference",
                        "ui_callout":"/callouts/internal/image_reference",
                        "ui_src_type":"image",
                        "ui_src_properties":["id","title"],
                        "ui_update":["image_idref", "image_title"],
                        "ui_width":"xlarge"
                    },
                    "image_title":{
                        "title":"Title",
                        "type":"string",
                        "ui_width":"xlarge"
                    }
                }
            }
        }
    }
}