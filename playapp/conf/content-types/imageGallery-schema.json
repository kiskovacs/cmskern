{
    "id":"imageGallery",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "images":{
            "type":"array",
            "title":"Image",
            "items":{
                "title":"Image",
                "type":"object",
                "properties":{
                    "image_idref":{
                        "title":"Image (intern)",
                        "description":"References an internal URL to a selected image.",
                        "type":"integer",
                        "format":"uri",
                        "ui":{
                            "callout":{
                                "url":"/callouts/internal/image_reference",
                                "src_properties":["id","title"],
                                "target_properties":["image_idref", "image_title"]
                            },
                            "width":"xlarge",
                            "class":"image_thumbnail"
                        }
                    },
                    "image_title":{
                        "title":"Title",
                        "type":"string",
                        "ui":{
                            "width":"xlarge"
                        }
                    }
                }
            }
        }
    }
}