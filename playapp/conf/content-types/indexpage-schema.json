{
    "id":"indexpage",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "node_idref":{
            "title":"Navigationsknoten",
            "type":"integer",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/node_reference",
                    "src_properties":["id","title", "ancestors"],
                    "target_properties":["node_idref", "node_title", "ancestors_idref"]
                },
                "width":"xlarge"
            }
        },
        "node_title":{
            "title":"Nav.knoten Titel",
            "type":"string",
            "ui":{
                "width":"xxlarge",
                "mode":"readonly"
            }
        },
        "title":{
            "title":"Titel",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "catchline":{
            "title":"Spitzmarke",
            "type":"string",
            "ui":{
                "width":"xxlarge"
            }
        },
        "teaser":{
            "title":"Teaser",
            "type":"object",
            "properties":{
                "title":{
                    "title":"Teaser Titel",
                    "type":"string",
                    "ui":{
                        "width":"xxlarge"
                    }
                },
                "text":{
                    "title":"Teaser Text",
                    "type":"string",
                    "ui":{
                        "editor":"textarea",
                        "width":"xxlarge"
                    }
                },
                "image_idref":{
                    "title":"Image ID",
                    "type":"integer",
                    "ui":{
                        "callout":{
                            "url":"/callouts/internal/image_reference",
                            "src_properties":["id", "title"],
                            "target_properties":["image_idref", "image_title"]
                        },
                        "width":"xlarge",
                        "mode":"image_thumbnail"
                    }
                },
                "image_title":{
                    "title":"Image Titel",
                    "type":"string",
                    "ui":{
                        "width":"xlarge"
                    }
                }
            }
        },
        "body":{
            "title":"Body Text",
            "type":"string",
            "ui":{
                "editor":"richtext",
                "width":"xxlarge"
            }
        },
        "sections":{
            "title":"Sections",
            "type":"array",
            "items":{
                "type":[
                    {
                        "id":"manual",
                        "title":"Manual Article List",
                        "type":"object",
                        "properties":{
                            "title":{
                                "title":"Section Titel",
                                "type":"string",
                                "ui":{
                                    "width":"xxlarge"
                                }
                            },
                            "teaser_type":{
                                "title":"Teasertyp",
                                "type":"string",
                                "enum":["Bühne", "3er-Vertikal", "Gallery", "Horizontal"]
                            },
                            "articles":{
                                "title":"Artikel",
                                "type":"array",
                                "items":{
                                    "title":"Artikel",
                                    "type":"object",
                                    "properties":{
                                        "article_idref":{
                                            "title":"Artikel",
                                            "type":"integer",
                                            "description":"References an internal URL to a selected article.",
                                            "ui":{
                                                "callout":{
                                                    "url":"/callouts/internal/article_reference",
                                                    "src_properties":["id", "title", "teaser_text"],
                                                    "target_properties":["article_idref", "article_headline", "teaser"]
                                                },
                                                "width":"xlarge"
                                            }
                                        },
                                        "spitzmarke":{
                                            "title":"Spitzmarke",
                                            "type":"string",
                                            "ui":{
                                                "width":"xlarge"
                                            }
                                        },
                                        "title":{
                                            "title":"Headline",
                                            "type":"string",
                                            "ui":{
                                                "width":"xxlarge"
                                            }
                                        },
                                        "teasertext":{
                                            "title":"Teaser",
                                            "type":"textarea",
                                            "ui":{
                                                "width":"xlarge"
                                            }
                                        },
                                        "image_idref":{
                                            "title":"Image ID",
                                            "description":"References an internal URL to a selected image.",
                                            "type":"integer",
                                            "ui":{
                                                "callout":{
                                                    "url":"/callouts/internal/image_reference",
                                                    "src_properties":["id", "title"],
                                                    "target_properties":["image_idref", "image_title"]
                                                },
                                                "width":"xlarge",
                                                "mode":"image_thumbnail"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "id":"query",
                        "type":"object",
                        "title":"Query",
                        "additionalProperties":false,
                        "properties":{
                            "title":{
                                "title":"Title",
                                "type":"string",
                                "ui":{
                                    "width":"xlarge"
                                }
                            },
                            "teaser_type":{
                                "title":"Teasertyp",
                                "type":"string",
                                "enum":["Bühne", "3er-Vertikal", "Gallery", "Horizontal"]
                            },
                            "query":{
                                "title":"Query",
                                "type":"string",
                                "ui":{
                                    "width":"xxlarge"
                                }
                            }
                        }
                    },
                    {
                        "id":"raw",
                        "type":"object",
                        "title":"Raw HTML Section",
                        "additionalProperties":false,
                        "properties":{
                            "text":{
                                "title":"Text",
                                "type":"string",
                                "ui":{
                                    "editor":"textarea",
                                    "width":"xxlarge"
                                }
                            }
                        }
                    }

                ]
            }
        },

        "dates":{
            "title":"Datumseinträge",
            "type":"object",
            "properties":{
                "embargo_date":{
                    "title":"Embargo Date",
                    "description":"Specify the embargo date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui":{
                        "width":"small"
                    }
                },
                "expire_date":{
                    "title":"Expire Date",
                    "description":"Specify the expire date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui":{
                        "width":"small"
                    }
                },
                "sort_date":{
                    "title":"Sort Date",
                    "description":"Specify the sort date of this article (format: YYYY-MM-DD).",
                    "type":"string",
                    "format":"date",
                    "ui":{
                        "width":"small"
                    }
                }
            }
        },
        "tags":{
            "title":"Tags",
            "description":"Multiple entries separated by comma (ie. aegypt,desert).",
            "type":"array",
            "ui":{
                "mode":"compact",
                "width":"large"
            },
            "items":{
                "type":"string",
                "ui":{
                    "query_type":"tags"
                }
            }
        },
        "author":{
            "title":"Autor",
            "type":"string",
            "ui":{
                "width":"xxlarge"
            }
        },
        "copyright":{
            "title":"Copyright",
            "type":"string",
            "ui":{
                "width":"xxlarge"
            }
        },
        "source":{
            "title":"Source",
            "type":"string",
            "ui":{
                "width":"large"
            }
        },
        "sidebar_idref":{
            "title":"Sidebar",
            "type":"integer",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/sidebar_reference",
                    "src_properties":["id"],
                    "target_properties":["sidebar_idref"]
                },
                "width":"xlarge"
            }
        },
        "adzone":{
            "title":"Belegungseinheit",
            "type":"string",
            "ui":{
                "width":"large"
            }
        },
        "settings":{
            "title":"Settings",
            "type":"object",
            "properties":{
                "comments":{
                    "title":"Kommentare zulassen?",
                    "type":"boolean",
                    "default":true
                },
                "print":{
                    "title":"Druckansicht?",
                    "type":"boolean",
                    "default":true
                },
                "rating":{
                    "title":"Bewertung zulassen?",
                    "type":"boolean",
                    "default":true
                },
                "socialbookmarks":{
                    "title":"Social Bookmarks?",
                    "type":"boolean",
                    "default":true
                },
                "recommend":{
                    "title":"Weiterempfehlen?",
                    "type":"boolean",
                    "default":true
                }
            }
        },
        "issue":{
            "title":"Heft",
            "type":"object",
            "properties":{
                "magazine":{
                    "title":"Heft Name",
                    "type":"string",
                    "enum":["NG", "NG World", "NG Kids"]
                },
                "year":{
                    "title":"Heft Jahr",
                    "type":"string"
                },
                "number":{
                    "title":"Heftnummer",
                    "type":"string"
                },
                "pages":{
                    "title":"Seiten",
                    "type":"string"
                }
            }
        }
    }
}
