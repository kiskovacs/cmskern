{
    "id":"sidebar",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "paras":{
            "title":"Module",
            "type":"array",
            "items":{
                "title":"Paragraph",
                "type":"object",
                "properties":{
                    "headline":{
                        "title":"Headline",
                        "type":"string",
                        "ui_width":"xxlarge"
                    },
                    "text":{
                        "title":"Text",
                        "type":"string",
                        "ui_editor":"textarea",
                        "ui_width":"xxlarge"
                    }
                }
            }
        }
    }
}
