{
    "id":"node",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui_width":"xxlarge"
        },
        "parent_node_idref":{
            "title":"Mutterknoten ID",
            "type":"integer",
            "ui_callout":{
                "url":"/callouts/internal/node_reference",
                "src_properties":["id","title"],
                "target_properties":["parent_node_idref", "parent_title"]
            },
            "ui_width":"xxlarge"
        },
        "parent_title":{
            "title":"Mutterknoten",
            "type":"string",
            "ui_width":"xxlarge",
            "ui_class":"readonly"
        },

        "path":{
            "title":"Pfad",
            "type":"string",
            "ui_width":"xlarge"
        },
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "article_idref":{
            "title":"Default Article Ref.",
            "type":"integer",
            "ui_callout":{
                "url":"/callouts/internal/article_reference",
                "src_properties":["id","title", "teaser_text"],
                "target_properties":["article_idref", "article_title", "teaser"]
            },
            "ui_width":"xlarge"
        },
        "article_title":{
            "title":"Default Article Title",
            "type":"string",
            "ui_width":"xlarge"
        },
        "adzone":{
            "title":"Ad-Zone/Belegungseinheit",
            "type":"string",
            "ui_width":"xlarge"
        },
        "html_include":{
            "title":"HTML Include",
            "type":"string",
            "ui_width":"xlarge"
        },
        "sidebar_idref":{
            "title":"Sidebar",
            "type":"integer",
            "ui_callout":{
                "url":"/callouts/internal/sidebar_reference",
                "src_properties":["id"],
                "target_properties":["sidebar_idref"]
            },
            "ui_width":"xlarge"
        },

        "ivw":{
            "title":"IVW Themengebiet",
            "type":"string",
            "ui_width":"xlarge"
        }
    }
}
