{
    "id":"node",
    "$schema":"http://json-schema.org/draft-03/schema",
    "type":"object",
    "additionalProperties":false,
    "properties":{
        "title":{
            "title":"Title",
            "type":"string",
            "required":true,
            "ui":{
                "width":"xxlarge"
            }
        },
        "parent_node_idref":{
            "title":"Mutterknoten ID",
            "type":"integer",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/node_reference",
                    "src_properties":["id","title", "ancestors"],
                    "target_properties":["parent_node_idref", "parent_title", "ancestors_idref"]
                },
                "width":"xxlarge"
            }
        },
        "parent_title":{
            "title":"Mutterknoten",
            "type":"string",
            "ui":{
                "width":"xxlarge",
                "mode":"readonly"
            }
        },

        "ancestors_idrefarr":{
            "title":"Vorfahren",
            "type":"array",
            "ui":{
                "width":"xxlarge",
                "mode":"readonly"
            }
        },
        "order_value":{
            "title":"Order",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "path":{
            "title":"Pfad",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "online":{
            "title":"Online?",
            "type":"boolean"
        },
        "article_idref":{
            "title":"Default Article Ref.",
            "type":"integer",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/article_reference",
                    "src_properties":["id","title", "teaser_text"],
                    "target_properties":["article_idref", "article_title", "teaser"]
                },
                "width":"xlarge"
            }
        },
        "article_title":{
            "title":"Default Article Title",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "adzone":{
            "title":"Ad-Zone/Belegungseinheit",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "html_include":{
            "title":"HTML Include",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        },
        "sidebar_idref":{
            "title":"Sidebar",
            "type":"integer",
            "ui":{
                "callout":{
                    "url":"/callouts/internal/sidebar_reference",
                    "src_properties":["id"],
                    "target_properties":["sidebar_idref"]
                },
                "width":"xlarge"
            }
        },
        "ivw":{
            "title":"IVW Themengebiet",
            "type":"string",
            "ui":{
                "width":"xlarge"
            }
        }
    }
}
